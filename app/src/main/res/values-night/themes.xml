<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wondrobe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/purple_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/isotype_splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Wondrobe</item>
    </style>

    <!-- Estilo TextView -->
    <style name="TextView.DarkTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo EditText -->
    <style name="EditText.DarkTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_blue_gray</item>
        <item name="colorControlActivated">@color/dark_blue_gray</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/white</item>
    </style>

</resources>
