<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo cuando el tema es claro -->
    <item android:drawable="@android:color/white" android:state_window_focused="false"/>
    <item android:drawable="@android:color/white" android:state_window_focused="true"/>
    <!-- Fondo cuando el tema es oscuro -->
    <item android:drawable="@android:color/black" android:state_window_focused="false" android:state_checked="true"/>
    <item android:drawable="@android:color/black" android:state_window_focused="true" android:state_checked="true"/>
</selector>
