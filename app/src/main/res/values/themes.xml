<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wondrobe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/purple_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Wondrobe" parent="Base.Theme.Wondrobe" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/isotype_splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Wondrobe</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Calendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@drawable/rounded_end</item>
        <item name="android:dateTextAppearance">@style/TextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/WeekDayTextAppearance</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WeekDayTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/dark_blue_gray</item>
    </style>

</resources>
